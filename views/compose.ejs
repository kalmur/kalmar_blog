<%- include("partials/header") -%>

  <h1>Compose blog post</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="titleInput" autocomplete="off">
      <label>Post</label>
      <textarea class="form-control" name="postInput" rows="5" cols="30"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
  </form>

<%- include("partials/footer") -%>
